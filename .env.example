# ============================================
# VENORUS ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.local and fill with actual values

# ============================================
# DATABASE PostgreSQL (REQUIRED)
# ============================================
DATABASE_URL="postgresql://user:password@host:port/database"
DATABASE_SSL="false"

# SSL Configuration (Production only)
# SSL_CA_CERT_PATH="/path/to/ca-certificate.pem"
# SSL_ALLOWED_HOSTS="1bb84d1fbea33d62faf51337.twc1.net,twc1.net"

# Alternative PostgreSQL variables
POSTGRESQL_HOST="localhost"
POSTGRESQL_PORT="5432"
POSTGRESQL_USER="postgres"
POSTGRESQL_PASSWORD="your_password"
POSTGRESQL_DBNAME="venorus"

# ============================================
# AWS S3 STORAGE (REQUIRED)
# ============================================
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"
AWS_S3_BUCKET_NAME="your_bucket_name"
AWS_REGION="ru-1"

# S3 API VARIABLES (REQUIRED)
S3_ENDPOINT="https://s3.your-provider.com"
S3_REGION="ru-1"
S3_ACCESS_KEY="your_access_key"
S3_SECRET_KEY="your_secret_key"
S3_BUCKET="your_bucket_name"

# ============================================
# SWIFT STORAGE (OPTIONAL)
# ============================================
SWIFT_URL="https://swift.your-provider.com"
SWIFT_ACCESS_KEY="your_swift_key"
SWIFT_SECRET_KEY="your_swift_secret"

# ============================================
# ADMIN AUTHENTICATION (REQUIRED)
# ============================================
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="secure_password_here"

# ============================================
# JWT & SESSIONS (REQUIRED)
# ============================================
# Generate with: openssl rand -hex 64
JWT_SECRET="your_jwt_secret_min_32_chars"
SESSION_SECRET="your_session_secret_min_32_chars"

# ============================================
# SECURITY (OPTIONAL)
# ============================================
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="3600000"
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="100"

# ============================================
# REDIS CACHE (REQUIRED FOR PRODUCTION)
# ============================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_USERNAME="default"
REDIS_PASSWORD="your_redis_password"
REDIS_DATABASE="0"

# ============================================
# NEXT.JS SETTINGS (REQUIRED)
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_min_32_chars"
NEXT_PUBLIC_HERO_IMAGE_URL="/images/hero-background.jpg"

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="development"
LOG_LEVEL="info"
PORT="3000"
NEXT_TELEMETRY_DISABLED="1"

# Database (choose either DATABASE_URL or POSTGRESQL_*)
# DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=
POSTGRESQL_DBNAME=venorus

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# S3
S3_ENDPOINT=https://s3.example.com
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# Security
JWT_SECRET=replace_with_long_random_string
SESSION_SECRET=replace_with_long_random_string

# Next
NODE_ENV=development